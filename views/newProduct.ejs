    <h3 class="text-center mt-5">New Product</h3>
    <div class="row">
      <div class="col-6 offset-3">
        <form action="/products" method="POST">
          <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="title" />
          </div>

          <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" id="image" name="image" />
          </div>

          <div class="mb-3">
            <label class="form-label" for="date">Manufacturing Date</label>
            <input
              class="form-control"
              type="text"
              id="date"
              name="manufacturingDate"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="date">Expiry Date</label>
            <input
              class="form-control"
              type="text"
              id="date"
              name="expiryDate"
            />
          </div>

          <div class="mb-3">
            <label class="form-label" for="company">Company Name</label>
            <input
              class="form-control"
              type="text"
              id="company"
              name="companyName"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="company">Category</label>
            <input
              class="form-control"
              type="text"
              id="company"
              name="category"
            />
          </div>

          <div class="mb-3">
            <label class="form-label" for="price">Price</label>
        
            <div class="col-12">
              <div class="input-group">
                <div class="input-group-text">â‚¹</div>
                <input
                  type="text"
                  class="form-control"
                  id="price"
                  placeholder="0.00"
                  name="price"
                />
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              name="description"
              id="description"
              cols="30"
              rows="5"
              placeholder="Description"
            ></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label" for="benefits">Benefits</label>
            <textarea
              class="form-control"
              name="benefits"
              id="benefits"
              cols="30"
              rows="5"
              placeholder="Benefits"
            ></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label" for="sideEffects">Side Effects</label>
            <textarea
              class="form-control"
              name="sideEffects"
              id="sideEffects"
              cols="30"
              rows="5"
              placeholder="Side Effects"
            ></textarea>
          </div>

          <div class="mb-3">
            <button class="btn btn-success" type="submit">Add Product</button>
          </div>
        </form>
      </div>
